function on_message(self, message_id, message, sender)
	if message_id == hash("trigger_response") then
		if message.other_group == hash("crosshair") then
			local tint
			if message.enter then
				tint = vmath.vector4(1, 1, 1, .3)
			else
				state.game_state.set_state_property(state.StateEnum.Level.MouseOverTileHash, nil)
				tint = vmath.vector4(1, 1, 1, 0)
			end
			go.set("#selected_overlay", "tint", tint)
		end
	elseif message_id == hash("collision_response") then
		if message.other_group == hash("crosshair") then
			state.game_state.set_state_property(state.StateEnum.Level.MouseOverTileHash, go.get_id())
		end
	end
end

